@model Movies.DB.Movies

@{
    ViewBag.Title = "Add movie";
}

<div class="container">
    <div class="text-center">
        <h1>Add movie to BMR</h1>
    </div>
    <br />
    <div class="form-group center-block" ,role="form">
        @using (Html.BeginForm("AddMovie", "Administration", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.ValidationSummary();

            <div class="form-group">
                
                @Html.LabelFor(x => x.Name, new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Year, new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Year, new { @class = "form-control" })
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(x => x.RattingId, new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.DropDownListFor(x => x.RattingId, ViewBag.ratlistname as SelectList, "Select ratting", new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.GenreId, new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.DropDownListFor(x => x.GenreId, ViewBag.genreList as SelectList, "Select genre", new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" value="Add movie" class="btn btn-success" />
                </div>
            </div>
        }
    </div>
</div>